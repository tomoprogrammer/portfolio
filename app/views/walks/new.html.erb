<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>歩数記録</h1>
       <%= form_with model: @walk, local:true do |f| %>
         <h4>歩数</h4>
         <%= f.text_field :walk_count, class:"form-control, size: 20" %>歩

         <h4>メモ</h4>
         <%= f.text_area :memo, class:"form-control" %>

         <h4>画像</h4>
         <%= f.attachment_field :walk_image, class: "form-control-file" %>
         <div class="p-3"></div>
         <%= f.submit '歩数を記録する', class:"btn btn-success " %>
       <% end %>
     </div>
  </div>
</div>