<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: current_user, walk_ranking: @walk_ranking %>
    </div>
    <div class="col-md-8">
      <h2>ユーザー一覧</h2>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>画像</th>
              <th>ユーザー名</th>
              <th>自己紹介</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= attachment_image_tag user, :profile_image, :fill,40,40, format: 'jpag', fallback: "icon_032200_48.jpg" %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                 <%= user.introduction %>
                </td>
         　　　　　　<td>
                  <%= link_to '詳細', user_path(user.id) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div style="text-align: center;">
          <%= paginate(@users) %>
        </div>
      </div>