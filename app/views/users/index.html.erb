<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>ユーザー一覧</h2>
        <thead>
          <table class="table table-bordered">
            <tr>
              <th>画像</th>
              <th>ユーザー名</th>
              <th colspan="3"></th>
            </tr>
          </table>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <table class="table table-bordered">
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, :fill,40,40, format: 'jpag' %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to '詳細', user_path(user.id) %>
              </td>
            </tr>
          <% end %>
          </table>
      </tbody>