<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: current_user, walk_ranking: @walk_ranking %>
    </div>
    <div class="col-md-8">
      <h2>ユーザー一覧</h2>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>画像</th>
              <th>ユーザー名</th>
              <th>フォロー数</th>
              <th>フォロワー数</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= attachment_image_tag user, :profile_image, :fill,40,40, format: 'jpag', fallback: "icon_032200_48.jpg" %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td class="follows"><%= link_to @user.followings.count, user_followings_path(@user) %>
         　　　　　　</td>
         　　　　　　<td class="followers"><%= link_to @user.followers.count, user_followers_path(@user) %>
         　　　　　　</td>
         　　　　　　<td>
                  <%= link_to '詳細', user_path(user.id) %>
                </td>
                <% unless current_user == user %>
                  <% if current_user.following?(user) %>
                    <td>
                      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-info" %>
                    </td>
                  <% else %>
                    <td>
                      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-success" %>
                    </td>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div style="text-align: center;">
          <%= paginate(@users) %>
        </div>
      </div>