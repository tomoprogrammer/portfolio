 <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
       <div class="form-group">
        <label for="inputName">Name</label>
         <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control" %>
       </div>
       <div class="form-group">
        <label for="inputImage">Image</label>
         <%= f.attachment_field :profile_image, class: "form-control-file" %>
       </div>
       <div class="form-group">
        <lavel for="inputIntroduction">Introduction</lavel>
         <%= f.text_area :introduction, autofocus: true, id:"introduction", class: "form-control" %>
      </div>
      <div class="form-group">
       <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
    <% end %>