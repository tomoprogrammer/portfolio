<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <h2>ユーザー編集</h2>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="inputName">名前(2字以上)</label>
              <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control" %>
          </div>
          <div class="form-group">
            <lavel for="inputIntroduction">自己紹介</lavel>
              <%= f.text_area :introduction, autofocus: true, id:"introduction", class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="inputImage">ユーザー画像</label>
              <%= f.attachment_field :profile_image, class: "form-control-file" %>
          </div>
            <div class="form-group">
              <%= f.submit "情報を更新する", class: "btn btn-success" %>
            </div>
         <% end %>
     </div>
   </div>
 </div>