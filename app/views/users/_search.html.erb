
    <div class="col-md-8 offset-md-1">
      <h2>ユーザー一覧</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>画像</th>
            <th>ユーザー名</th>
            <th colspan="3"></th>
          </tr>
       </thead>
      <tbody>
        <% users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill,48,48, format: 'jpag', fallback: "icon_032200_48.jpg" %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to '詳細', user_path(user.id) %>
            </td>
          </tr>
        <% end %>
        </table>
      </tbody>