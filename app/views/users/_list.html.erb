<h3>ログイン中のユーザー</h3>
  <div class="profile-container">
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg' %>

    <table class="table">
      <tbody><tr></tr>
        <tr>
          <th>name</th>
          <th>
            <%= user.name %></th>
          </tr>
          <tr>
          <th>introduction</th>
          <th class="introduction"><%= user.introduction %></th>
        </tr>
        <tr>
          <th>follows</th>
          <th class="follows"><%= link_to user.followings.count, user_followings_path(user) %>
          </th>
        </tr>
        <tr>
          <th>followers</th>
          <th class="followers"><%= link_to user.followers.count, user_followers_path(user) %></th>
        </tr>
        <% unless current_user == user %>
          <% if current_user.following?(user) %>
            <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-info" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-success" %>
          <% end %>
        <% else %>
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>