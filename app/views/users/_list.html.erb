<h3>ログイン中のユーザー</h3>
  <div class="profile-container">
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg' %>

    <table class="table">
      <tbody><tr></tr>
        <tr>
          <th>ユーザー名</th>
          <th>
            <%= user.name %></th>
          </tr>
          <tr>
          <th>自己紹介</th>
          <th class="introduction"><%= user.introduction %></th>
        </tr>
        <tr>
          <th>フォロー数</th>
          <th class="follows"><%= link_to user.followings.count, user_followings_path(user) %>
          </th>
        </tr>
        <tr>
          <th>フォロワー数</th>
          <th class="followers"><%= link_to user.followers.count, user_followers_path(user) %></th>
        </tr>
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
      </tbody>
    </table>
  </div>