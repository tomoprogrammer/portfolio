<h3>ログイン中のユーザー</h3>
<div class="profile-container">
 <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
</div>

<div>
 <div><strong>ユーザー名</strong></div>
 <div><%= user.name %></div>
</div>

<div class="mt-3">
 <div><strong>自己紹介</strong></div>
 <div class="introduction"><%= user.introduction %></div>
</div>

<div class="mt-3">
 <strong>フォロー数</strong>
 &thinsp;:&thinsp;
 <span class="follows">
  <%= link_to user.followings.count, user_followings_path(user) %>
 </span>
</div>

<div class="mt-3">
 <strong>フォロワー数</strong>
 &thinsp;:&thinsp;
 <span class="followers">
  <%= link_to user.followers.count, user_followers_path(user) %>
 </span>
 </div>
 <%= link_to "編集する", edit_user_path(@user), class:"btn btn-secondary" %>

<h4 class="mt-5">ユーザー歩数ランキング</h4>

<% walk_ranking.each_with_index do |data, i| %>
 <h5>第<%= i + 1 %>位</h5>
 <div class="row">
  <div class="col-md-4">
   <%= attachment_image_tag data[:user], :profile_image, :fill, 100, 100, format: 'jpeg' %>
  </div>
  <div class="col-md-8"><%= data[:user].name %></div>
 </div>
 合計 : <%= data[:walk_count] %>歩
<% end %>
