<h2>Follower Users</h2>
  <% if @users.exists? %>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill,48,48, format: 'jpeg', fallback: "icon_032200_48.jpg" %>
            </td>
            <td><%= user.name %></td>
            <td>フォロー数: <%= user.followings. count %></td>
            <td>フォロワー数:<%= user.followers.count %></td>
            <td>
              <%= link_to 'Show', user_path(user.id) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
   <% else %>
     <p>ユーザはいません</p>
   <% end %>